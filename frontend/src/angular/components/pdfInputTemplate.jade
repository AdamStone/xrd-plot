div
  input(type="file" class="hidden-input" name="pdf-input" multiple)
  .button-group
    .btn.btn-success(ng-click="addFiles()") Upload Xray PDFs
    .btn.btn-primary(ng-click="clearFiles()") Clear PDFs
    .form-group
      label Vertical scaling
      
      input(ng-model="scale",
            type="range",
            min="10",
            max="100")
            
    .form-group(ng-repeat="file in files")
      
      input(type="color", class="hidden-input", ng-attr-name="color-input-{{$index}}", ng-model="file.color")
     
      span.color-square(ng-style="{'background-color': file.color}",
                        ng-click="pickColor($index)")                        
    
      span.filename {{file.filename}}

    